{
  "openapi": "3.1.0",
  "info": {
    "title": "utoipa-axum",
    "description": "Utoipa's axum bindings for seamless integration for the two",
    "contact": {
      "name": "Juha Kukkonen",
      "email": "juha7kukkonen@gmail.com"
    },
    "license": {
      "name": "MIT OR Apache-2.0",
      "identifier": "MIT OR Apache-2.0"
    },
    "version": "0.2.0"
  },
  "paths": {
    "/api/login": {
      "post": {
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginForm"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "유저 생성 성공"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "500": {
            "description": "로그인 오류"
          }
        }
      }
    },
    "/api/signup": {
      "post": {
        "operationId": "signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupForm"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "유저 생성 성공"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "500": {
            "description": "로그인 오류"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginForm": {
        "type": "object",
        "required": [
          "login_id",
          "password"
        ],
        "properties": {
          "login_id": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "SignupForm": {
        "type": "object",
        "required": [
          "login_id",
          "password"
        ],
        "properties": {
          "login_id": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}