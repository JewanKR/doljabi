{
  "openapi": "3.1.0",
  "info": {
    "title": "doljabi",
    "description": "doljabi project REST API를 정의한 문서입니다.",
    "contact": {
      "name": "Doljabi Team",
      "email": "doljabi2025@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/admin/users/{user_id}": {
      "delete": {
        "tags": [
          "admin"
        ],
        "operationId": "delete_user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "유저 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "유저 삭제 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "404": {
            "description": "유저를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    },
    "/admin/users/{user_id}/ban": {
      "patch": {
        "tags": [
          "admin"
        ],
        "operationId": "update_ban_status",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "유저 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBanRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "밴 상태 변경 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "404": {
            "description": "유저를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    },
    "/admin/users/{user_id}/password": {
      "patch": {
        "tags": [
          "admin"
        ],
        "operationId": "update_password",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "유저 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePasswordRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "비밀번호 변경 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "404": {
            "description": "유저를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    },
    "/admin/users/{user_id}/username": {
      "patch": {
        "tags": [
          "admin"
        ],
        "operationId": "update_username",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "유저 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateNicknameRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "닉네임 변경 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "404": {
            "description": "유저를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    },
    "/soyul/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "로그인",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResult"
                }
              }
            }
          },
          "401": {
            "description": "로그인 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResult"
                }
              }
            }
          }
        }
      }
    },
    "/soyul/auth/logout": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "로그아웃 (세션 삭제)",
        "operationId": "logout",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionKeyRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "로그아웃 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    },
    "/soyul/auth/me": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "세션 키로 내 정보 조회",
        "operationId": "me",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionKeyRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "유저 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeResponse"
                }
              }
            }
          },
          "401": {
            "description": "세션 없음/만료",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    },
    "/soyul/auth/signup": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "회원가입",
        "operationId": "signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "400": {
            "description": "이미 존재하는 아이디/닉네임",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GenericResponse": {
        "type": "object",
        "description": "공통 응답 형태",
        "required": [
          "success",
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "login_id",
          "password"
        ],
        "properties": {
          "login_id": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "LoginResult": {
        "type": "object",
        "required": [
          "success",
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "session_key": {
            "type": [
              "string",
              "null"
            ]
          },
          "success": {
            "type": "boolean"
          }
        }
      },
      "MeResponse": {
        "type": "object",
        "required": [
          "user_id",
          "login_id",
          "username",
          "rating",
          "is_banned"
        ],
        "properties": {
          "is_banned": {
            "type": "boolean"
          },
          "login_id": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "format": "int32"
          },
          "user_id": {
            "type": "integer",
            "format": "int64"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "SessionKeyRequest": {
        "type": "object",
        "required": [
          "session_key"
        ],
        "properties": {
          "session_key": {
            "type": "string"
          }
        }
      },
      "SignupRequest": {
        "type": "object",
        "required": [
          "login_id",
          "password",
          "username"
        ],
        "properties": {
          "login_id": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "UpdateBanRequest": {
        "type": "object",
        "description": "밴 상태 변경 요청 바디",
        "required": [
          "is_banned"
        ],
        "properties": {
          "is_banned": {
            "type": "boolean"
          }
        }
      },
      "UpdateNicknameRequest": {
        "type": "object",
        "description": "닉네임 변경 요청 바디",
        "required": [
          "new_username"
        ],
        "properties": {
          "new_username": {
            "type": "string"
          }
        }
      },
      "UpdatePasswordRequest": {
        "type": "object",
        "description": "비밀번호 변경 요청 바디",
        "required": [
          "new_password"
        ],
        "properties": {
          "new_password": {
            "type": "string"
          }
        }
      }
    }
  }
}